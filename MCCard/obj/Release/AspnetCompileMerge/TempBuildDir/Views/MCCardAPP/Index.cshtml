@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Breadcrumbs -->
<ol class="breadcrumb link-box">
    <li><a class="link-text" href="/">首頁</a></li>
    <li class="link-text ">麥當勞點點APP</li>
</ol>

<!-- 麥當勞報報APP -->
<div class="container-fluid">
    <div class="row">
        <div class="forPC">
            <a href="http://campaign.mcdonalds.com.tw/linkref/20160425/8/">
                <img class="img-responsive" src="~/wwwroot/Image/desktop_img/pic_news_main_banner.png" />
            </a>
        </div>
        <div class="forElse">
            <img src="~/wwwroot/Image/mobile_img/pic_news_main_banner_m.jpg" style="width:100%" />
        </div>
    </div>

    <div class="row">
        <div class="forPC">
            <img class="img-responsive" src="~/wwwroot/Image/desktop_img/pic_news_banner_color.png" />
        </div>
        <div class="forElse">
            <img src="~/wwwroot/Image/mobile_img/pic_news_banner_color_m1.jpg" style="width:100%" />
            <img src="~/wwwroot/Image/mobile_img/pic_news_banner_color_m2.jpg" style="width:100%" />
            <img src="~/wwwroot/Image/mobile_img/pic_news_banner_color_m3.jpg" style="width:100%" />
        </div>
    </div>

</div>
<script>
    $(document).ready(function () {
        //For Menu
        $(window).resize(function () { Transform_APP(); }); Transform_APP()

    });

    function Transform_APP() {
        if (window.innerWidth >= 595) {
            $('.forPC').show();
            $('.forElse').hide();
                        
        }
        else {
            $('.forPC').hide();
            $('.forElse').show();
            
        }
    }
</script>